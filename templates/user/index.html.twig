{% extends 'base.html.twig'%}

{% block body %}

<div id="user_panel">
    <div class="row">
        <div class="col-lg-3">
            <div>
                <img id="user_img" src="{{ asset('images/defaults/profile_default.png') }}"/>
            </div>
            <div id="user_data">
                <div id="inline">
                    <p> Nombre de Usuario: </p> {{ app.user.username }}
                    <a href="{{ path('profile_editUser', {'param': 1, 'id': app.user.id})}}">Editar</a>
                </div>
                <div id="inline">
                    <p> Cambiar Contrase√±a:</p>
                    <a href="{{ path('profile_editPassword') }}">Cambiar</a>
                </div>
                <div id="inline">
                    <p> Nombre: </p> {{ app.user.nombre }}
                    <a href="{{ path('profile_editUser', {'param': 2, 'id': app.user.id})}}">Editar</a>
                </div>
                <div id="inline">
                    <p> ROL: </p> {{ app.user.roles|join(', ') }}
                </div>
                <div id="inline">
                    <P> email: </P> {{ app.user.email}}
                    <a href="{{ path('profile_editUser', {'param': 3, 'id': app.user.id})}}">Editar</a>
                </div>
            </div>   
            <br>
        </div>
        <div class="col-lg-1">
        </div>
        <div class="col-lg-3" id="eventosUser">
            <h1>Eventos</h1>
            <table>
                <tr>
                    <th>Nombre</th>
                    <th>Inicio</th>
                    <th>Fin</th>
                    <th>Borrar</th>
                </tr>
            {% for part in app.user.participantes %}
                <tr>
                    <td>{{ part.idEvento.nombre }}</td>
                    <td>{{ part.idEvento.fechaInicio|date("d/m/Y") }}</td>
                    <td>{{ part.idEvento.fechaFin|date("d/m/Y") }}</td>
                    <td> <a href="{{ path('borrarse', {id:part.id}) }}" class="btn btn-primary btn-sm active" role="button">Borrarse</a></td>
                </tr>
            {% endfor %}
            </table>
        </div>
    </div>
    <div class="col-lg-8" id="comentariosUser">
        <h1>Comentarios</h1>
        {% for com in app.user.comentarios %}
            <b>{{ com.idEvento.nombre }}</b>: {{ com.comentario }}<br>
        {% endfor %}
    </div>
</div>
    
{% endblock body %}
