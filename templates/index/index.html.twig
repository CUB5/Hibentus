{% extends 'base.html.twig' %}

{% block body %}

    {% for evento in lstEventos %}
        <div id="eventoIndex">
            <a href="{{ path("vistaEvento", {id: evento.id}) }}">
                <section id="primeraLinea">
                    <div>
                        <h1>{{ evento.nombre }}</h1>
                    </div>
                    <div id="fechasEvento">
                        Fecha inicio: {{evento.fechaInicio|date("d/m/Y")}}<br>
                        Fecha fin: {{evento.fechaFin|date("d/m/Y")}}
                    </div>
                </section>
                <div id="segundaLinea">
                    <div id="eventoCatDesc">
                        <h5>{{ evento.idCategoria.nombre }}</h5>
                        {{ evento.descripcion }}
                    </div>
                    <div id="imagenIndex">
                        {% if evento.imagen %}
                            <img src="{{ asset(evento.imagen)}}">
                        {% else %}
                            <img src="{{ asset('imgs/imgCat/cat' ~ evento.idCategoria.id ~ '.png') }}">
                        {% endif %}
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}

    {% include 'inc/paginador.tpl.twig' with {routerName: 'index'} %}
{% endblock %}